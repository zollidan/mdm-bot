# Docker Compose Override for Local Development
# Copy this file to docker-compose.override.yml for local development
# This file allows you to override production settings without modifying docker-compose.yaml

services:
  bot:
    # Override for local development - mount code for hot reload
    volumes:
      - .:/app
    # Remove resource limits for development
    deploy:
      resources:
        limits:
          cpus: "2"
          memory: 1G

  meilisearch:
    # Development mode for MeiliSearch
    environment:
      - MEILI_ENV=development
    # Remove resource limits for development
    deploy:
      resources:
        limits:
          cpus: "1"
          memory: 2G

  postgres:
    # Expose port for local database tools
    ports:
      - "5432:5432"
